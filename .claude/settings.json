{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",

  "model": "sonnet",
  "alwaysThinkingEnabled": false,

  "permissions": {
    "allow": [
      "Bash(pnpm:*)",
      "Bash(node:*)",
      "Bash(npx:*)",
      "Bash(git:*)",
      "Bash(nvm:*)",
      "Bash(source:*)",
      "Bash(pandoc:*)",
      "Bash(xelatex:*)",
      "Bash(pdflatex:*)",
      "Bash(tlmgr:*)",
      "Bash(kpsewhich:*)",
      "Bash(fc-list:*)",
      "Bash(wc:*)",
      "Bash(tree:*)",
      "Bash(ls:*)",
      "Bash(du:*)",
      "Bash(mkdir:*)",
      "Bash(chmod:*)",
      "Bash(open:*)",
      "Bash(lsof:*)",
      "Bash(timeout:*)",
      "WebSearch"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(sudo rm:*)",
      "Read(./.env)",
      "Read(./.env.local)"
    ]
  },

  "env": {
    "NODE_ENV": "development"
  },

  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo 'âœ“ ä¸‰æ›¸ç²¾è®€å‡ºç‰ˆç³»çµ± v3.0 ready' && echo \"Today: $(date '+%Y-%m-%d')\" && git status --short 2>/dev/null | head -5"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "prettier --write \"$CLAUDE_FILE_PATH\" 2>/dev/null || true"
          },
          {
            "type": "command",
            "command": "if [[ \"$CLAUDE_FILE_PATH\" == *.md ]]; then wc -w \"$CLAUDE_FILE_PATH\" 2>/dev/null | awk '{print \"ğŸ“ Word count: \" $1}'; fi"
          }
        ]
      }
    ]
  }
}
