{
  "name": "three-books-publishing",
  "version": "3.0.0",
  "description": "7年三書精讀出版系統：孫子兵法、資治通鑑、聖經 | MVP: 約翰福音研讀",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "dev:debug": "next dev --inspect",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "new-note": "node scripts/daily-template.js",
    "weekly-summary": "node scripts/weekly-summary.js",
    "monthly-report": "node scripts/monthly-report.js",
    "build-book": "node scripts/build-book.js",
    "stats": "node scripts/stats.js",
    "build:pdf": "node scripts/build-pdf.js",
    "build:journal": "node scripts/build-pdf.js --format journal",
    "build:newspaper": "node scripts/build-pdf.js --format newspaper",
    "build:brochure": "node scripts/build-pdf.js --format brochure",
    "build:book-pdf": "node scripts/build-pdf.js --format book",
    "build:gospel": "node scripts/build-pdf.js --format gospel-of-john",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf .next node_modules",
    "prepare": "echo 'Ready for pnpm'",
    "sync": "node scripts/sync.mjs up",
    "sync:up": "node scripts/sync.mjs up",
    "sync:down": "node scripts/sync.mjs down",
    "sync:status": "node scripts/sync.mjs status",
    "sync:force": "node scripts/sync.mjs up --force",
    "publish:weekly": "node scripts/publish-to-cloud.mjs weekly",
    "publish:monthly": "node scripts/publish-to-cloud.mjs monthly",
    "publish:all": "node scripts/publish-to-cloud.mjs all",
    "publish:list": "node scripts/publish-to-cloud.mjs list"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "firebase": "^12.7.0",
    "next": "^16.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@next/eslint-plugin-next": "^16.1.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.4.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16"
  },
  "keywords": [
    "gospel-of-john",
    "bible-study",
    "sunzi",
    "art-of-war",
    "zizhi-tongjian",
    "publishing",
    "ai",
    "claude",
    "nextjs",
    "turbopack"
  ],
  "author": "Jim Xiao",
  "license": "UNLICENSED"
}
