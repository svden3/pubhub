%% ============================================
%% TIKZ DIAGRAMS - TIMELINE
%% ============================================
\newcommand{\johntimeline}{%
\begin{tikzpicture}[scale=0.8, transform shape]
  % Timeline
  \draw[NIVBlue, line width=2pt] (0,0) -- (10,0);

  % Title
  \node[font=\small\bfseries, text=NIVBlue] at (5,1.8) {耶穌事工時間線 TIMELINE OF JESUS' MINISTRY};

  % Years
  \foreach \x/\year in {0/主後27年, 3.3/主後28年, 6.6/主後29年, 10/主後30年} {
    \draw[NIVBlue, line width=1pt] (\x,-0.15) -- (\x,0.15);
    \node[font=\tiny, below] at (\x,-0.25) {\year};
  }

  % Passovers
  \foreach \x/\num in {1/第一次, 4.5/第二次, 9/第三次} {
    \draw[NIVRed, line width=1.5pt, dashed] (\x,-0.8) -- (\x,0.8);
    \node[font=\tiny, text=NIVRed, above] at (\x,0.85) {逾越節 \num};
  }

  % Events
  \foreach \x/\event in {
    0.5/受洗,
    2/神蹟1-3,
    5/五餅二魚,
    7/住棚節,
    8.5/拉撒路
  } {
    \fill[NIVBlue] (\x,0) circle (3pt);
    \node[font=\tiny, above, text width=1cm, align=center] at (\x,0.3) {\event};
  }

\end{tikzpicture}
}

