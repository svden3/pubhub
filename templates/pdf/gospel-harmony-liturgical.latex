%% ============================================
%% LITURGICAL YEAR WHEEL DIAGRAM
%% ============================================
\newcommand{\liturgicalwheel}{%
\begin{tikzpicture}[scale=0.9, transform shape]
  % Outer ring with seasons
  \def\outerrad{4.2}
  \def\innerrad{3.0}
  \def\centerrad{1.4}

  % Draw season arcs (clockwise from top)
  % Advent (4 weeks) - starts at top
  \fill[AdventBlue!70] (90:\innerrad) arc (90:45:\innerrad) -- (45:\outerrad) arc (45:90:\outerrad) -- cycle;

  % Christmas (12 days + Epiphany season)
  \fill[ChristmasWhite, draw=LiturgicalGold, line width=0.5pt] (45:\innerrad) arc (45:0:\innerrad) -- (0:\outerrad) arc (0:45:\outerrad) -- cycle;

  % Ordinary Time (before Lent)
  \fill[OrdinaryGreen!60] (0:\innerrad) arc (0:-45:\innerrad) -- (-45:\outerrad) arc (-45:0:\outerrad) -- cycle;

  % Lent (40 days)
  \fill[LentPurple!60] (-45:\innerrad) arc (-45:-110:\innerrad) -- (-110:\outerrad) arc (-110:-45:\outerrad) -- cycle;

  % Holy Week
  \fill[HolyWeekRed!70] (-110:\innerrad) arc (-110:-130:\innerrad) -- (-130:\outerrad) arc (-130:-110:\outerrad) -- cycle;

  % Easter (50 days)
  \fill[EasterWhite, draw=LiturgicalGold, line width=0.5pt] (-130:\innerrad) arc (-130:-200:\innerrad) -- (-200:\outerrad) arc (-200:-130:\outerrad) -- cycle;

  % Ordinary Time (after Pentecost) - largest section
  \fill[OrdinaryGreen!60] (-200:\innerrad) arc (-200:-270:\innerrad) -- (-270:\outerrad) arc (-270:-200:\outerrad) -- cycle;

  % Center circle
  \fill[white] (0,0) circle (\centerrad);
  \draw[LiturgicalGold, line width=2pt] (0,0) circle (\centerrad);

  % Center cross
  \draw[LiturgicalRed, line width=3pt] (0,-0.9) -- (0,0.9);
  \draw[LiturgicalRed, line width=3pt] (-0.7,0.25) -- (0.7,0.25);

  % Season labels
  \node[font=\footnotesize\bfseries, text=white] at (67.5:3.6) {ADVENT};
  \node[font=\footnotesize\bfseries, text=white] at (67.5:3.2) {將臨期};
  \node[font=\footnotesize\bfseries, text=LiturgicalGold] at (22.5:3.6) {CHRISTMAS};
  \node[font=\footnotesize\bfseries, text=LiturgicalGold] at (22.5:3.2) {聖誕期};
  \node[font=\footnotesize\bfseries, text=white] at (-77.5:3.6) {LENT};
  \node[font=\footnotesize\bfseries, text=white] at (-77.5:3.2) {大齋期};
  \node[font=\footnotesize\bfseries, text=LiturgicalGold] at (-165:3.6) {EASTER};
  \node[font=\footnotesize\bfseries, text=LiturgicalGold] at (-165:3.2) {復活期};
  \node[font=\footnotesize\bfseries, text=white] at (-235:3.6) {ORDINARY};
  \node[font=\footnotesize\bfseries, text=white] at (-235:3.2) {常年期};

  % Outer border
  \draw[LiturgicalGold, line width=2pt] (0,0) circle (\outerrad);
  \draw[LiturgicalGold, line width=1pt] (0,0) circle (\innerrad);

  % Title
  \node[font=\normalsize\bfseries, text=LiturgicalRed] at (0,-5.5) {THE LITURGICAL YEAR 教會年曆};

\end{tikzpicture}
}

