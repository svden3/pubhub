  % Year B
  \draw[OrdinaryGreen!80!black, line width=3pt] (0,0) circle (\rad);
  \fill[OrdinaryGreen!20] (0,0) circle (\rad);
  \node[font=\Large\bfseries, text=OrdinaryGreen!80!black] at (0,0.6) {Year B};
  \node[font=\normalsize] at (0,0) {Mark 馬可};
  \node[font=\tiny\itshape] at (0,-0.8) {2024, 2027...};

  % Year C
  \draw[LiturgicalBlue, line width=3pt] (2.8,0) circle (\rad);
  \fill[LiturgicalBlue!20] (2.8,0) circle (\rad);
  \node[font=\Large\bfseries, text=LiturgicalBlue] at (2.8,0.6) {Year C};
  \node[font=\normalsize] at (2.8,0) {Luke 路加};
  \node[font=\tiny\itshape] at (2.8,-0.8) {2025, 2028...};

  % Connecting arrows
  \draw[-{Stealth}, line width=1.5pt, gray] (-0.7,\rad*0.65) arc (125:55:1.4);
  \draw[-{Stealth}, line width=1.5pt, gray] (3.5,-\rad*0.65) arc (-55:-125:1.4);
  \draw[-{Stealth}, line width=1.5pt, gray] (-2.8,-\rad-0.3) -- (-2.8,-\rad-0.7) -- (2.8,-\rad-0.7) -- (2.8,-\rad-0.3);

  % Note about John
  \node[font=\footnotesize\itshape, text width=6cm, align=center] at (0,-3.8)
