\documentclass[10pt,twoside,openright]{memoir}

%% ============================================
%% PAGE SIZE - 6.5×9.5" Study Bible Size
%% ============================================
\setstocksize{9.5in}{6.5in}
\settrimmedsize{\stockheight}{\stockwidth}{*}
