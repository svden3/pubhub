%% ============================================
%% RED LETTER BIBLE COMMAND
%% ============================================
\newcommand{\jesus}[1]{\textcolor{JesusRed}{\textit{#1}}}

%% ============================================
%% VERSE AND CHAPTER COMMANDS
%% ============================================
% Verse number (bold, dark blue)
\newcommand{\vs}[1]{\textsuperscript{\bfseries\color{MacBlue}#1}\,}

% Chapter number (large, prominent)
\newcommand{\chnum}[1]{%
  {\fontsize{32}{34}\selectfont\color{MacBlue}\bfseries #1}\,%
}

% Section heading
\newcommand{\sectionhead}[1]{%
  \vspace{0.6em}
  {\large\bfseries\color{MacBlue}#1}
  \vspace{0.3em}
  \par
}

% Bilingual section heading
\newcommand{\sectionheadzh}[2]{%
  \vspace{0.6em}
  {\large\bfseries\color{MacBlue}#1}\\
  {\normalsize\color{LightGray}#2}
  \vspace{0.3em}
  \par
}

%% ============================================
%% CROSS-REFERENCE COMMANDS
%% ============================================
% Inline cross-reference
\newcommand{\xref}[1]{%
  {\scriptsize\color{RefGray}(#1)}%
}

%% ============================================
%% VERSE-BY-VERSE NOTE (MacArthur's distinctive feature)
%% ============================================
\newcommand{\versenote}[2]{%
  \par\noindent\textbf{#1}\quad #2\par
}

% Bilingual verse note
\newcommand{\versenotezh}[3]{%
  \par\noindent\textbf{#1}\quad #2\\
  {\small\color{TextGray}#3}\par
}

%% ============================================
%% DOCTRINE NOTE (highlighted in red)
%% ============================================
\newcommand{\doctrinenote}[2]{%
  \par\noindent{\color{MacRed}\bfseries #1}\quad #2\par
}

